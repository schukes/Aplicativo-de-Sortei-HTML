    <script>
        // Fun√ß√µes de Persist√™ncia
        function carregarNomes(key, defaultValue) {
            try {
                const stored = localStorage.getItem(key);
                return stored ? JSON.parse(stored) : defaultValue;
            } catch (e) {
                console.error("Erro ao carregar dados do localStorage", e);
                return defaultValue;
            }
        }
        
        function salvarNomes(key, data) {
            try {
                localStorage.setItem(key, JSON.stringify(data));
            } catch (e) {
                console.error("Erro ao salvar dados no localStorage", e);
            }
        }
        
        // Inicializa√ß√£o de Dados com Persist√™ncia
        let nomes = carregarNomes('sorteio_candidatos', [
            "Felipe Martins", "Tiago Guedes", "Leticia", "Rodrigo", "Isadora",
            "Camila Beatriz", "Fernando", "Tiago Hasegawa", "Yasmim"
        ]);
        let nomesSorteados = carregarNomes('sorteio_sorteados', []);
        
        // --- Vari√°veis de Controle de Pausa ---
        let sorteioPausado = false; 
        let resolvePausa; 
        // --- FIM Vari√°veis de Controle de Pausa ---

        // Contexto de √Åudio para gera√ß√£o de som
        const audioContext = new (window.AudioContext || window.webkitAudioContext)();
        
        // --- Refer√™ncias de Elementos ---
        const listaNomesEl = document.getElementById('listaNomes');
        const listaSorteadosEl = document.getElementById('listaSorteados');
        const resultadoEl = document.getElementById('resultado');
        const btnSortear = document.getElementById('btnSortear');
        const novoNomeInput = document.getElementById('novoNome');
        const btnAdicionar = document.getElementById('btnAdicionar');
        const contadorCandidatosEl = document.getElementById('contadorCandidatos');
        const btnLimparSorteados = document.getElementById('btnLimparSorteados');
        const btnImprimirSorteados = document.getElementById('btnImprimirSorteados');
        const btnResetarSorteados = document.getElementById('btnResetarSorteados');
        const btnContinuar = document.getElementById('btnContinuar'); 


        // --- Fun√ß√µes de Som (Sem Altera√ß√£o) ---
        
        function playClickBeep(delay = 0) {
            if (audioContext.state === 'suspended') return;

            const frequency = 700;
            const duration = 0.05;
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();

            oscillator.type = 'sawtooth';
            oscillator.frequency.setValueAtTime(frequency, audioContext.currentTime + delay);

            gainNode.gain.setValueAtTime(0.3, audioContext.currentTime + delay);
            gainNode.gain.exponentialRampToValueAtTime(0.0001, audioContext.currentTime + delay + duration);

            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);

            oscillator.start(audioContext.currentTime + delay);
            oscillator.stop(audioContext.currentTime + delay + duration);
        }

        function playWinnerMelody() {
            if (audioContext.state === 'suspended') return;
            
            const C5 = 523.25; const D5 = 587.33; const E5 = 659.25; 
            const G5 = 783.99; const A5 = 880.00; const C6 = 1046.5; 
            
            let time = audioContext.currentTime;
            
            function playNote(freq, start, dur, volume, waveType = 'square') {
                const osc = audioContext.createOscillator();
                const gain = audioContext.createGain();

                osc.type = waveType;
                osc.frequency.setValueAtTime(freq, start);
                
                gain.gain.setValueAtTime(0, start); 
                gain.gain.linearRampToValueAtTime(volume * 1.5, start + 0.03);
                gain.gain.linearRampToValueAtTime(volume, start + dur * 0.4);
                gain.gain.exponentialRampToValueAtTime(0.0001, start + dur);

                osc.connect(gain);
                gain.connect(audioContext.destination);

                osc.start(start);
                osc.stop(start + dur);
            }
            
            const quarter = 0.3; 
            const dottedQuarter = quarter * 1.5; 
            const eighth = quarter * 0.5; 
            const vol = 0.5;
            
            // Melodia
            playNote(C5, time, dottedQuarter, vol);
            playNote(D5, time + dottedQuarter, eighth, vol);
            time += (dottedQuarter + eighth);
            
            playNote(E5, time, dottedQuarter, vol);
            playNote(D5, time + dottedQuarter, eighth, vol);
            time += (dottedQuarter + eighth);

            playNote(C5, time, dottedQuarter, vol);
            playNote(D5, time + dottedQuarter, eighth, vol);
            time += (dottedQuarter + eighth);

            playNote(E5, time, dottedQuarter, vol);
            playNote(G5, time + dottedQuarter, eighth, vol);
            time += (dottedQuarter + eighth);
            
            playNote(C6, time, quarter, vol * 1.2, 'sine'); time += quarter;
            playNote(A5, time, quarter, vol * 1.2, 'sine'); time += quarter;
            playNote(G5, time, quarter, vol * 1.2, 'sine'); time += quarter;
            playNote(E5, time, quarter, vol * 1.2, 'sine'); time += quarter;
            
            playNote(C6, time, 1.2, vol * 1.5, 'triangle'); 
            playNote(E5, time, 1.2, vol * 1.5, 'triangle');
            playNote(G5, time, 1.2, vol * 1.5, 'triangle');
            
            time += 1.2;
        }


        // --- Fun√ß√µes de L√≥gica e Renderiza√ß√£o ---

        function atualizarLista() {
            nomes.sort((a, b) => a.toLowerCase().localeCompare(b.toLowerCase()));
            const ulNomes = document.createElement('ul');
            nomes.forEach(nome => {
                const li = document.createElement('li');
                li.innerHTML = `
                    <span>${nome}</span>
                    <button class="btn-excluir" data-nome="${nome}">X</button>
                `;
                ulNomes.appendChild(li);
            });
            listaNomesEl.innerHTML = '';
            listaNomesEl.appendChild(ulNomes);
            
            // Adicionar event listeners para os bot√µes de exclus√£o
            document.querySelectorAll('.btn-excluir').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const nomeParaExcluir = e.currentTarget.getAttribute('data-nome');
                    removerNome(nomeParaExcluir);
                });
            });

            // 2. Atualizar Lista de Sorteados
            const ulSorteados = document.createElement('ul');
            nomesSorteados.forEach((nome, index) => {
                const li = document.createElement('li');
                li.textContent = `${nomesSorteados.length - index}¬∫: ${nome}`;
                ulSorteados.prepend(li);
            });
            listaSorteadosEl.innerHTML = '';
            listaSorteadosEl.appendChild(ulSorteados);
            
            // 3. Atualizar Contador e bot√µes
            contadorCandidatosEl.textContent = nomes.length;
            
            // Determinar estados de bloqueio
            const isDrawing = resultadoEl.classList.contains('animacao-sorteio'); // TRUE durante a rolagem de nomes
            const isPaused = btnContinuar.style.display !== 'none'; // TRUE durante a pausa interativa

            // Bot√£o Sortear principal √© desabilitado se a lista estiver vazia ou se estiver em sorteio/pausa
            btnSortear.disabled = nomes.length === 0 || isDrawing || isPaused;
            
            // Bot√µes auxiliares de Imprimir/Limpar/Resetar S√ì S√ÉO DESABILITADOS DURANTE A ROLAGEM
            btnImprimirSorteados.disabled = nomesSorteados.length === 0 || isDrawing;
            btnLimparSorteados.disabled = nomesSorteados.length === 0 || isDrawing;
            btnResetarSorteados.disabled = nomesSorteados.length === 0 || isDrawing;
            
            // ‚≠êÔ∏è AJUSTE AQUI: Controles de Adi√ß√£o/Exclus√£o s√≥ devem ser desabilitados durante a ROLAGEM
            btnAdicionar.disabled = isDrawing;
            novoNomeInput.disabled = isDrawing;
            document.querySelectorAll('.btn-excluir').forEach(btn => btn.disabled = isDrawing);

            // Garante que o bot√£o Continuar esteja ativo durante a pausa
            if(isPaused) {
                btnContinuar.disabled = false;
            } else if (nomes.length === 0 && !isDrawing) {
                btnSortear.disabled = true;
                resultadoEl.textContent = "ü•≥ Sorteio Finalizado! Lista de Candidatos vazia.";
            }
            
            // 4. Salvar no Local Storage
            salvarNomes('sorteio_candidatos', nomes);
            salvarNomes('sorteio_sorteados', nomesSorteados);
        }

        function sleep(ms) {
            return new Promise(resolve => setTimeout(resolve, ms));
        }
        
        // Fun√ß√£o de Pausa Manual
        function waitForUserClick() {
            return new Promise(resolve => {
                resolvePausa = resolve;
                sorteioPausado = true;
                
                // Esconde o bot√£o Sortear e mostra o Continuar
                btnSortear.style.display = 'none';
                btnContinuar.style.display = 'block';
                
                // ‚≠êÔ∏è AJUSTE AQUI: Removemos o texto da contagem duplicada do bot√£o
                btnContinuar.textContent = `Continuar Sorteio`; 
                
                // Os bot√µes auxiliares est√£o liberados pela l√≥gica de atualizarLista
                btnContinuar.disabled = false;
                
                // Chamamos atualizarLista para aplicar o estado 'isPaused' corretamente
                atualizarLista(); 
            });
        }
        
        // Fun√ß√£o para Continuar o Sorteio
        function continuarSorteio() {
            if (sorteioPausado && resolvePausa) {
                sorteioPausado = false;
                btnContinuar.style.display = 'none';
                btnSortear.style.display = 'block';
                
                // A atualiza√ß√£o da lista (incluindo o re-enable de bot√µes) ocorrer√° implicitamente antes do pr√≥ximo sorteio
                
                // ‚≠êÔ∏è Importante: Chamar atualizarLista antes de resolver a promise para garantir que o Sortear n√£o fique desabilitado sem motivo se houver nomes
                atualizarLista();

                // O fluxo de sorteio √© reiniciado/continuado
                resolvePausa(); 
            }
        }
        
        function lancarConfetti() {
            const duration = 4 * 1000;
            const animationEnd = Date.now() + duration;
            const defaults = { startVelocity: 30, spread: 360, ticks: 60, zIndex: 0 };
            
            function randomInRange(min, max) {
                return Math.random() * (max - min) + min;
            }

            const interval = setInterval(function() {
                const timeLeft = animationEnd - Date.now();

                if (timeLeft <= 0) {
                    return clearInterval(interval);
                }

                const particleCount = 50 * (timeLeft / duration);
                const colors = ['#388E3C', '#66BB6A', '#ffffff']; 
                
                confetti(Object.assign({}, defaults, { particleCount, colors: colors, origin: { x: randomInRange(0.1, 0.3), y: randomInRange(0.7, 0.9) } }));
                confetti(Object.assign({}, defaults, { particleCount, colors: colors, origin: { x: randomInRange(0.7, 0.9), y: randomInRange(0.7, 0.9) } }));
            }, 250);
        }

        async function sortear() {
            if (audioContext.state === 'suspended') {
                audioContext.resume();
            }

            while (nomes.length > 0) {
                
                // Desabilitar todos os bot√µes no IN√çCIO do sorteio
                document.querySelectorAll('.btn-acao, .input-area button').forEach(btn => btn.disabled = true);
                document.querySelectorAll('.btn-excluir').forEach(btn => btn.disabled = true);
                novoNomeInput.disabled = true;

                // --- SORTEIO DE 1 VENCEDOR ---
                
                resultadoEl.textContent = `Sorteando o ${nomesSorteados.length + 1}¬∫ Vencedor...`;
                resultadoEl.classList.add('animacao-sorteio'); 
                resultadoEl.classList.remove('vencedor');

                const ciclos = 30 + Math.floor(Math.random() * 20);
                let indiceFinal = Math.floor(Math.random() * nomes.length);
                let nomeVencedor;
                
                // Simula√ß√£o de rolagem
                for(let i = 0; i < ciclos; i++) {
                    playClickBeep(); 
                    let indiceRolagem = i % nomes.length;
                    resultadoEl.textContent = nomes[indiceRolagem];
                    let fatorDesaceleracao = Math.pow(i / ciclos, 3); 
                    let tempoEspera = 50 + fatorDesaceleracao * 300; 
                    await sleep(tempoEspera);
                }
                
                // Anuncia o Vencedor
                nomeVencedor = nomes[indiceFinal]; 
                resultadoEl.textContent = `üéâ ${nomeVencedor} üéâ`; 
                resultadoEl.classList.remove('animacao-sorteio');
                resultadoEl.classList.add('vencedor');
                
                playWinnerMelody(); 
                lancarConfetti();
                
                // Mover o vencedor
                const nomeIndex = nomes.indexOf(nomeVencedor); 
                nomesSorteados.unshift(nomes.splice(nomeIndex, 1)[0]);
                
                // Chama atualizarLista para liberar os bot√µes auxiliares
                atualizarLista(); 
                
                await sleep(4000); 

                // --- PAUSA INTERATIVA ---
                
                if (nomes.length > 0) {
                    await waitForUserClick(); // Espera pelo clique no bot√£o Continuar
                } 
                
            } // FIM DO WHILE (Sorteio Cont√≠nuo)

            // Finaliza quando a lista estiver vazia
            
            btnSortear.style.display = 'block'; 
            btnContinuar.style.display = 'none';
            
            resultadoEl.classList.remove('vencedor');
            resultadoEl.textContent = "ü•≥ Sorteio Finalizado! Todos os candidatos foram sorteados.";
            
            // Reabilita todos os controles
            document.querySelectorAll('.btn-acao, .input-area button').forEach(btn => btn.disabled = false);
            novoNomeInput.disabled = false;
            novoNomeInput.value = '';
            novoNomeInput.focus();

            atualizarLista();
        }

        // --- Outras Fun√ß√µes (Sem Altera√ß√£o) ---
        
        function imprimirSorteados() {
            if (nomesSorteados.length === 0) {
                alert("N√£o h√° nomes sorteados para imprimir.");
                return;
            }

            let htmlContent = `
                <h1>Lista Oficial de Vencedores (${new Date().toLocaleDateString('pt-BR')})</h1>
                <ul>
            `;
            for (let i = nomesSorteados.length - 1; i >= 0; i--) {
                htmlContent += `<li>${nomesSorteados.length - i}¬∫ Vencedor: ${nomesSorteados[i]}</li>`;
            }
            htmlContent += `</ul>`;

            const printContainer = document.querySelector('.print-container');
            printContainer.innerHTML = htmlContent;
            
            window.print();
            
            printContainer.innerHTML = '';
        }
        
        function resetarSorteadosParaCandidatos() {
            if (nomesSorteados.length === 0) {
                alert("A lista de sorteados j√° est√° vazia. N√£o h√° nomes para resetar.");
                return;
            }

            if (confirm("ATEN√á√ÉO: Deseja realmente mover TODOS os nomes sorteados de volta para a lista de Candidatos?")) {
                nomes = nomes.concat(nomesSorteados); 
                nomesSorteados = [];
                
                btnSortear.style.display = 'block';
                btnContinuar.style.display = 'none';
                resultadoEl.textContent = "Aguardando sorteio...";

                atualizarLista();
                alert("Os nomes sorteados foram resetados e est√£o de volta √† lista de candidatos.");
            }
        }

        function capitalizeName(name) {
            return name.toLowerCase().split(' ').map(word => {
                if (word.length > 0) {
                    return word.charAt(0).toUpperCase() + word.slice(1);
                }
                return '';
            }).join(' ');
        }

        function adicionarNome() {
            let novoNome = novoNomeInput.value.trim();
            if (novoNome === '') {
                alert('Digite um nome v√°lido para adicionar.');
                return;
            }
            
            novoNome = capitalizeName(novoNome); 

            if (nomes.some(n => n === novoNome) || nomesSorteados.some(n => n === novoNome)) {
                alert('Esse nome j√° est√° na lista de candidatos ou j√° foi sorteado.');
                return;
            }
            nomes.push(novoNome);
            atualizarLista();
            novoNomeInput.value = '';
            novoNomeInput.focus();
        }
        
        function removerNome(nomeParaExcluir) {
            if (confirm(`Tem certeza que deseja remover "${nomeParaExcluir}" da lista?`)) {
                nomes = nomes.filter(nome => nome !== nomeParaExcluir);
                atualizarLista();
            }
        }
        
        function limparSorteados() {
            if (nomesSorteados.length === 0) {
                alert("A lista de sorteados j√° est√° vazia.");
                return;
            }
            if (confirm("Voc√™ tem certeza que deseja limpar toda a lista de Vencedores Sorteados (eles ser√£o perdidos se n√£o estiverem na lista de candidatos)?")) {
                nomesSorteados = [];

                if(nomes.length > 0) {
                    btnSortear.style.display = 'block';
                    btnContinuar.style.display = 'none';
                    resultadoEl.textContent = "Aguardando sorteio...";
                } else {
                    resultadoEl.textContent = "Lista de candidatos vazia.";
                }

                atualizarLista();
                alert("Lista de sorteados limpa com sucesso!");
            }
        }

        // Event Listeners
        btnSortear.addEventListener('click', sortear);
        btnAdicionar.addEventListener('click', adicionarNome);
        btnLimparSorteados.addEventListener('click', limparSorteados);
        btnImprimirSorteados.addEventListener('click', imprimirSorteados); 
        btnResetarSorteados.addEventListener('click', resetarSorteadosParaCandidatos); 
        btnContinuar.addEventListener('click', continuarSorteio); 
        
        // Permitir adicionar nome ao pressionar Enter no input
        novoNomeInput.addEventListener('keyup', (e) => {
            if (e.key === 'Enter') {
                adicionarNome();
            }
        });

        // Inicializa lista na tela
        atualizarLista();
    </script>
</body>
</html>
